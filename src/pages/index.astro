---
import SectionContainer from "@/components/SectionContainer.astro"
import Card from "@/components/card/Card.astro"
import CardHeader from "@/components/card/CardHeader.astro"
import projectData from "@/data/projectData.json"
import Layout from "@/layouts/Layout.astro"
---

<Layout title='Vajillas de ceramica' description='.'>
  <SectionContainer>
    <header
      style={{
        backgroundImage:
          "url(https://res.cloudinary.com/cristian-cloud/image/upload/v1712127331/vajilla_j0rrvl.jpg)",
        backgroundSize: "cover",
        backgroundPosition: "center",
        backgroundRepeat: "no-repeat",
      }}
      class='py-20'
    >
      <div class='max-w-4xl mx-auto px-6 grid gap-2'>
        <h1 class='font-bold text-3xl text-white-50'>Ceramica con amor</h1>
        <p class='text-neutral-100 font-medium text-2xl'>
          piezas más exclusivas de los mejores artesanos dedicados a la
          producción de Vajillas con Barro Rojo
        </p>
      </div>
    </header>
  </SectionContainer>
  <div class='max-w-4xl grid gap-16 px-8 md:gap-16 mx-auto'>
    <SectionContainer class='projects--container mt-10'>
      <div class='grid gap-5 md:grid-cols-3 grid-cols-2 w-full'>
        {
          projectData.map((project) => (
            <Card key={project.id} className='col-span-1'>
              <div class='flex flex-col'>
                <img
                  src={project.logo}
                  height={180}
                  alt='Alternative text for photo'
                  loading='lazy'
                  class={`object-cover aspect-auto `}
                />
                <CardHeader class='md:pt-4 pt-2'>
                  {project.title}

                  <div class='break-words text-base md:text-lg font-medium text-neutral-800'>
                    <p>{project.shortExcerpt}</p>
                  </div>
                </CardHeader>
              </div>
            </Card>
          ))
        }
      </div>
    </SectionContainer>
  </div>
</Layout>
