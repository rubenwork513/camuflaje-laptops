---
import SectionContainer from "@/components/SectionContainer.astro"
import Card from "@/components/card/Card.astro"
import CardHeader from "@/components/card/CardHeader.astro"
import projectData from "@/data/projectData.json"
import Layout from "@/layouts/Layout.astro"
---

<Layout>
  <SectionContainer>
    <header
      style={{
        backgroundImage:
          "url(https://res.cloudinary.com/cristian-cloud/image/upload/v1713165632/dan-lefebvre-RfUy0XMCkhQ-unsplash_esksc3.jpg)",
        backgroundSize: "cover",
        backgroundPosition: "center",
        backgroundRepeat: "no-repeat",
      }}
      class='py-20'
    >
      <div class='max-w-4xl mx-auto px-6 grid gap-2'>
        <h1 class='font-bold text-3xl text-white-50'>Compu Tienda</h1>
        <p class='text-neutral-100 font-medium text-2xl'>
          Aprovecha nuestros descuentos en productos de tecnolog√≠a hasta el 30%
          de descuento en las mejores marcas
        </p>
      </div>
    </header>
  </SectionContainer>
  <div class='max-w-4xl grid gap-16 px-8 md:gap-16 mx-auto'>
    <SectionContainer class='projects--container mt-10'>
      <div class='grid gap-5 md:grid-cols-3 grid-cols-2 w-full'>
        {
          projectData.map((project) => (
            <Card
              key={project.id}
              className='col-span-1 border border-neutral-400'
            >
              <div class='flex flex-col border border-neutral-400 p-3 h-full justify-between'>
                <img
                  src={project.logo}
                  height={180}
                  alt='Alternative text for photo'
                  loading='lazy'
                  class={`object-cover aspect-auto `}
                />
                <CardHeader class='md:pt-4 pt-2'>
                  <span class=''>{project.title}</span>

                  <div class='flex gap-2'>
                    <p class='text-sm font-medium text-red-800 line-through'>
                      ${Math.round(project.shortExcerpt * 1.3)}
                    </p>
                    <p class='text-base md:text-lg font-medium text-blue-800'>
                      ${project.shortExcerpt}
                    </p>
                  </div>
                </CardHeader>
              </div>
            </Card>
          ))
        }
      </div>
    </SectionContainer>
  </div>
</Layout>
